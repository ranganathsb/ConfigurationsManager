                Fill="{StaticResource AccentBaseColorBrush}"
                RenderTransformOrigin="0.5,0.5"
                Stretch="Uniform" />
        </Button>
        <Button
            Name="ImportButton"
            Grid.Row="2"
            Grid.Column="1"
            Margin="10"
            VerticalAlignment="Center"
            BorderBrush="Transparent"
            Click="ImportButton_OnClick"
            Content="Import"
            Style="{StaticResource AccentedSquareButtonStyle}" />
        <Button
            Name="ExportButton"
            Grid.Row="2"
            Grid.Column="2"
            Margin="10"
            VerticalAlignment="Center"
            BorderBrush="Transparent"
            Click="ExportButton_OnClick"
            Content="Export"
            Style="{StaticResource AccentedSquareButtonStyle}" />
    </Grid>
</Controls:MetroWindow>